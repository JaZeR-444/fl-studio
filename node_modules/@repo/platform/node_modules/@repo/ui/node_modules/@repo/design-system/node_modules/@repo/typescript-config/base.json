{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "@styled-jsx/plugin-typescript"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@repo/design-system/*": [
        "packages/design-system/src/*"
      ],
      "@repo/ui/*": [
        "packages/ui/src/*"
      ],
      "@repo/platform/*": [
        "packages/platform/src/*"
      ],
      "@repo/content/*": [
        "packages/content/src/*"
      ],
      "@repo/visuals/*": [
        "packages/visuals/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "build"
  ]
}